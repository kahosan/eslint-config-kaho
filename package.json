{
  "name": "eslint-config-kaho",
  "version": "4.0.2",
  "description": "ESlint config for Kaho",
  "homepage": "https://github.com/kahosan/eslint-config-kaho#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahosan/eslint-config-kaho.git"
  },
  "bugs": {
    "url": "https://github.com/kahosan/eslint-config-kaho/issues"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown index.ts --format cjs --clean --dts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm run build && pnpm publish",
    "postinstall": "npx simple-git-hooks"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "kahosan"
  ],
  "author": "kahosan <kahosan@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "@eslint-sukka/node": "^8.0.5",
    "@eslint-sukka/react": "^8.0.5",
    "@eslint-sukka/shared": "^8.0.5",
    "eslint-config-sukka": "^8.0.5",
    "eslint-plugin-perfectionist": "^4.15.1"
  },
  "devDependencies": {
    "bumpp": "^10.3.2",
    "eslint": "^9.39.1",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": ">=9.31.0 <=9.39.1",
    "typescript": "<=^5.9.3"
  },
  "packageManager": "pnpm@10.24.0",
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm typecheck",
    "pre-push": "pnpm lint:fix"
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ],
    "*.json": [
      "eslint"
    ]
  }
}
